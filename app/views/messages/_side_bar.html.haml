.side_bar
  .side_bar__user_name
    .side_bar__user_name__top_items
      %p.side_bar__user_name__top_items__name
        = current_user.name
      %ul.side_bar__user_name__top_items__icons
        %li.side_bar__user_name__top_items__icons__edit
          = link_to "/groups/new" do
            = icon('fas', 'edit')
        %li.side_bar__user_name__top_items__icons__cog
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .side_bar__group_list
    - current_user.groups.each do |group|
      .side_bar__group_list__content
        = link_to '#' do
          %p.side_bar__group_list__content__name
            = group.name
          %p.side_bar__group_list__content__message
            まだメッセージがありません
    